<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myRequestCardItem"
    style="@style/myrequest_card"
    android:layout_marginHorizontal="@dimen/_15sdp"
    app:cardBackgroundColor="@color/Light_100"
    app:cardCornerRadius="@dimen/_13sdp"
    app:cardElevation="0dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:strokeColor="@color/Light_60">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Light_100"
        android:paddingHorizontal="@dimen/_8sdp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardImage"
            style="@style/dp_card"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/circularImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_person_24"
                tools:ignore="ContentDescription" />
        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:flow_horizontalAlign="start"
            app:constraint_referenced_ids="textViewWithdrawAmount,textViewTransactionDate,textViewWithdrawReason"
            app:layout_constraintStart_toEndOf="@id/guideline7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/textViewWithdrawAmount"
            style="@style/home_text_style"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            tools:text="Rs 1500" />

        <TextView
            android:id="@+id/textViewTransactionDate"
            style="@style/home_text_style"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/Light_20"
            android:textSize="@dimen/_9ssp"
            tools:text="Date: 15-2-2023" />

        <TextView
            android:id="@+id/textViewWithdrawReason"
            style="@style/home_text_style"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            tools:text="Reason: Personal Expenses" />
        <androidx.constraintlayout.helper.widget.Flow
           android:id="@+id/flow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:flow_horizontalAlign="start"
            app:constraint_referenced_ids="textViewWithdrawlStatus,textViewTransactionType"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline8"
          />

        <TextView
            android:id="@+id/textViewWithdrawlStatus"
            style="@style/home_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/Light_20"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/flow3"
            tools:text="Pending" />

        <TextView
            android:id="@+id/textViewTransactionType"
            style="@style/home_text_style"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/Light_20"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintStart_toStartOf="@+id/flow3"
            android:textStyle="bold"
            tools:text="status" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="53dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="29dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>




