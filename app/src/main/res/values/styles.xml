<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="splash_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/_262sdp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Light_100</item>
        <item name="android:textSize">@dimen/_36ssp</item>
    </style>


    <style name="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Light_100</item>
        <item name="android:textSize">@dimen/_36ssp</item>
    </style>

    <style name="button_style">
        <item name="android:layout_height">@dimen/_44sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:background">@drawable/button_round</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/Light_80</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>


    <style name="button_style_google">
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:background">@drawable/button_round_google</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/Violet_100</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="button_style_login">
        <item name="android:layout_height">@dimen/_44sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:background">@drawable/button_round_login</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/Violet_100</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="text_style_toolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="card_menu_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_51sdp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:stateListAnimator">@animator/card_scale</item>
    </style>

    <style name="menu_image_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/_12sdp</item>
        <item name="android:paddingRight">@dimen/_16sdp</item>
    </style>

    <style name="card_meu_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="menu_arrow_image_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="user_card_style_home">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="avatar_card_menu">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_margin">@dimen/_3sdp</item>
    </style>

    <style name="home_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="curren_balance_card">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_18sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
    </style>

    <style name="current_balance_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_16sdp</item>
        <item name="android:layout_marginBottom">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/_4sdp</item>
        <item name="android:paddingRight">@dimen/_4sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="total_deposit_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="total_withdraw_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="text_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/_16sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:background">@drawable/edit_field_round</item>
    </style>
</resources>